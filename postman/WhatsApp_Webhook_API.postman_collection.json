{
    "info": {
        "name": "WhatsApp Webhook API",
        "description": "WhatsApp Webhook API Collection with Examples",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Health Check",
            "request": {
                "method": "GET",
                "url": "http://localhost:3000/api/health",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{whatsappToken}}"
                    }
                ]
            }
        },
        {
            "name": "2. Send Template Message",
            "request": {
                "method": "POST",
                "url": "http://localhost:3000/api/webhook",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{whatsappToken}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"type\": \"template\",\n    \"parameters\": {\n        \"template_name\": \"hello_world\",\n        \"language\": {\n            \"code\": \"en_US\"\n        },\n        \"components\": [\n            {\n                \"type\": \"header\",\n                \"parameters\": [\n                    {\n                        \"type\": \"image\",\n                        \"image\": {\n                            \"link\": \"https://example.com/image.jpg\"\n                        }\n                    }\n                ]\n            }\n        ]\n    },\n    \"customerMobile\": \"916370073215\"\n}"
                }
            }
        },
        {
            "name": "3. Send Text Message",
            "request": {
                "method": "POST",
                "url": "http://localhost:3000/api/webhook",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"type\": \"text\",\n    \"parameters\": {\n        \"message\": \"Hello from webhook!\"\n    },\n    \"customerMobile\": \"916370073215\"\n}"
                }
            }
        },
        {
            "name": "4. Send Interactive Button Message",
            "request": {
                "method": "POST",
                "url": "http://localhost:3000/api/webhook",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"type\": \"interactive\",\n    \"parameters\": {\n        \"interactiveType\": \"button\",\n        \"button\": {\n            \"header\": \"Special Offer!\",\n            \"body\": \"Would you like to know more about our services?\",\n            \"buttons\": [\n                {\n                    \"type\": \"reply\",\n                    \"reply\": {\n                        \"id\": \"yes_button\",\n                        \"title\": \"Yes, tell me more\"\n                    }\n                },\n                {\n                    \"type\": \"reply\",\n                    \"reply\": {\n                        \"id\": \"no_button\",\n                        \"title\": \"No, thanks\"\n                    }\n                }\n            ]\n        }\n    },\n    \"customerMobile\": \"916370073215\"\n}"
                }
            }
        },
        {
            "name": "5. Send Document Message",
            "request": {
                "method": "POST",
                "url": "http://localhost:3000/api/webhook",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"type\": \"document\",\n    \"parameters\": {\n        \"document\": {\n            \"link\": \"https://example.com/sample.pdf\",\n            \"filename\": \"sample.pdf\",\n            \"caption\": \"Please find the attached document\"\n        }\n    },\n    \"customerMobile\": \"916370073215\"\n}"
                }
            }
        },
        {
            "name": "6. Verify Webhook",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:3000/api/webhook?hub.mode=subscribe&hub.verify_token=sfgdfgwergreghethgethetheth&hub.challenge=1234567890",
                    "host": ["localhost"],
                    "port": "3000",
                    "path": ["api", "webhook"],
                    "query": [
                        {
                            "key": "hub.mode",
                            "value": "subscribe"
                        },
                        {
                            "key": "hub.verify_token",
                            "value": "sfgdfgwergreghethgethetheth"
                        },
                        {
                            "key": "hub.challenge",
                            "value": "1234567890"
                        }
                    ]
                }
            }
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [""]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.test(\"Status code is 200\", function () {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Response has success property\", function () {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('success');",
                    "});"
                ]
            }
        }
    ]
}